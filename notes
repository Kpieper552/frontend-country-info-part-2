
async function fetchDataCountry () {
    const result = await axios.get('https://restcountries.eu/rest/v2/all');
           console.log("hi there ", result.data);
    const countryLiz = document.getElementById("countryList")  ;
    console.log(countryLiz);

    for (const name of result.data) {
        console.log ("land ", name)
        const listItem = document.createElement("li");
                listItem.textContent = name.flag + "IMGFLAG" + "Country:" + name.name + " situated in  " + name.subregion + " Population: " + name.population;
        console.log("lijst" , listItem);
        countryLiz.appendChild(listItem);
    }
}
fetchDataCountry();
