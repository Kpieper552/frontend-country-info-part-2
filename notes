// mijn resultaten tot zover

function displayCountry(countryData) {
  const countryElement = document.createElement("li");
  countryElement.setAttribute("class", "product-listItem");
  const countryName = countryData.name;
  const countryPopulation = countryData.population; // deze dient op volgorde in een functie
  countryElement.textContent = countryName.concat(tvPopulation);

  const list = document.getElementById("productList");
  list.appendChild(countryElement);
};
for (let index = 0; index < countryData.length; index++) {
  displayCountry(countryData);
}
console.log(displayCountry);


const popLowHigh = name.population.sort((popA, popB) => {
    if (popA.year > popB.year) {
        return 1;
    }
    if (popA.year < popB.year) {
        return -1;
    }
    if (popA.year === popB.year) {
        return 0;
    }
});
console.log(popLowHigh);
